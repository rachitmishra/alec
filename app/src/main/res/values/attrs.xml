<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BezelImageView">
        <attr name="maskDrawable" format="reference" />
        <attr name="borderDrawable" format="reference" />
        <attr name="desaturateOnPress" format="boolean" />
    </declare-styleable>
    <array name="letter_tile_colors">
        <item>#f16364</item>
        <item>#f58559</item>
        <item>#f9a43e</item>
        <item>#e4c62e</item>
        <item>#67bf74</item>
        <item>#59a2be</item>
        <item>#2093cd</item>
        <item>#ad62a7</item>
    </array>
    <color name="letter_tile_default_color">#cccccc</color>
    <color name="letter_tile_font_color">#ffffff</color>

    <attr name="textSpacing" format="float" />
    <attr name="fontTypeface" format="enum">
        <enum name="regular" value="1" />
        <enum name="bold" value="2" />
    </attr>

    <declare-styleable name="TextViewPlus">
        <attr name="fontTypeface"/>
        <attr name="textSpacing"/>
    </declare-styleable>
</resources>
