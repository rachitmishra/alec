<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="in.ceeq.alec">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

    <activity
            android:name=".ContactListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.ContactProvider"
            android:authorities="in.ceeq.alec.provider"
            android:enabled="true"
            android:exported="false"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="in.ceeq.alec.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".ContactEditActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_contact_edit"/>

        <activity
            android:name=".gallery.GalleryActivity"
            android:theme="@style/AppTheme.Transparent"
            android:label="@string/title_activity_contact_edit"/>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name=".ContactViewActivity"
            android:label=""/>
    </application>
</manifest>
